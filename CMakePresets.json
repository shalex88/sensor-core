{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "displayName": "Base Configuration Preset",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "native-base",
      "hidden": true,
      "inherits": "base",
      "displayName": "Base Native Compilation Preset"
    },
    {
      "name": "native-debug",
      "displayName": "Native Debug",
      "inherits": "native-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "native-release",
      "displayName": "Native Release",
      "inherits": "native-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "cross-base",
      "hidden": true,
      "inherits": "base",
      "displayName": "Base Cross Compilation Preset",
      "toolchainFile": "$env{CMAKE_TOOLCHAIN_FILE}"
    },
    {
      "name": "cross-debug",
      "displayName": "Cross Debug",
      "inherits": "cross-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "cross-release",
      "displayName": "Cross Release",
      "inherits": "cross-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "native-debug",
      "configurePreset": "native-debug"
    },
    {
      "name": "native-release",
      "configurePreset": "native-release"
    },
    {
      "name": "cross-debug",
      "configurePreset": "cross-debug"
    },
    {
      "name": "cross-release",
      "configurePreset": "cross-release"
    }
  ]
}
